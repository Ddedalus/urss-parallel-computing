    "version": "2.0.3",
    "tasks": [
        {
            "label": "Build main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "main.cpp",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run main",
            "type": "shell",
            "command": "./main",
            "args": [
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}